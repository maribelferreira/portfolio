---
import { Image } from 'astro:assets';
import letroImage from '../assets/letro.png';
import awalaImage from '../assets/awala-featured.png';
import evenergyImage from '../assets/ev-energy.png';
import veraidImage from '../assets/veraid.png';
import AwalaThumbnail from '../assets/awala-thumbnail.png';
import PaperchaseThumbnail from '../assets/paperchase-thumbnail.png';
import NaturalSafaris from '../assets/natural-safaris.png';


const projects = [
  {
    title: "Letro Android App",
    description: "Led the end-to-end UI/UX design and the brand identity of Letro, an offline alternative to email.",
    image: letroImage,
    link: "/letro"
  },
  {
    title: "VeraId Website Redesign",
    description: "Designed and implemented a website for VeraId, an offline authentication protocol, significantly increasing user engagement by 60% in 2 months.",
    image: veraidImage, 
    link: "/veraid"
  },
  {
    title: "Awala Website Redesign",
    description: "Designed and built a multi-language marketing website for Awala, a platform to build offline-compatible apps, significantly increasing user engagement by 35% in 2 months.",
    image: awalaImage, 
    link: "/awala"
  },
  
  {
    title: "ev.energy App",
    description: "Collaborated with a cross-functional team to enhance the user experience of an EV charging app, and customised the white-labelled app for different clients.",
    image:  evenergyImage,
    link: "/ev-energy"
  },
  {
    title: "Paperchase - UX and checkout flow optimisation",
    description: "Optimised the UX and checkout flow, resulting in a 20% boost in user engagement and a seamless shopping experience.",
    image: PaperchaseThumbnail,
    link: "/paperchase"
  },

  {
    title: "Natural High Safaris",
    description: "Redesigned a bespoke website for a luxury safari and wilderness travel brand, leading to a 33% increase in user engagement.",
    image: NaturalSafaris,
    link: "/natural-high"
  },
];
---
<section class="px-6 md:px-8 pb-8 md:pb-16">
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-10 max-w-screen-2xl mx-auto">
  {projects.map(project => (
    <div>
      <a 
        href={project.link}
        class="block group"
      >
        <div class="overflow-hidden rounded-2xl lg:rounded-3xl">
          <div class="relative">
            <Image
              src={project.image}
              alt={project.title}
              class="object-cover w-full transition-transform duration-300 group-hover:scale-105"
            />
          </div>
        </div>
      </a>
      <h3 class="mt-4 text-2xl font-semibold">
        {project.title}
      </h3>
      <p class="text-md lg:text-lg font-regular my-2 leading-normal">
        {project.description}
      </p>
    </div>
  ))}
</div>
</section>