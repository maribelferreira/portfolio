---
import { Image } from 'astro:assets';
import letroImage from '../assets/letro.png';
import awalaImage from '../assets/awala-website.png';
import evenergyImage from '../assets/ev-energy.png';
import audistarImage from '../assets/audistar.png';
import awaladDesktopImage from '../assets/awala-desktop.png';    
import naturalSafarisImage from '../assets/natural-safaris.png';


const projects = [
  {
    title: "Letro Android App",
    description: "Led the end-to-end UI/UX design and the brand identity of Letro, an offline-compatible alternative to email.",
    image: letroImage,
    link: "/letro"
  },
  {
    title: "Awala Website Redesign",
    description: "Designed and developed a responsive website for Awala, the all in one app to bypass Internet censorship",
    image: awalaImage, 
    link: "/"
  },
  {
    title: "EV Energy App",
    description: "Collaborated with a cross-functional team to enhance the user experience of an EV charging app, and designed customisable white-label versions of the app.",
    image:  evenergyImage,
    link: "/"
  },
  {
    title: "Awala Desktop App",
    description: "Designed the UX/UI for Awala Desktop App, a platform to build offline-compatible apps. ",
    image: awaladDesktopImage,
    link: "/"
  },

  {
    title: "Natural High Safaris",
    description: "Led the website redesign of Natural High Safaris, resulting in an increase of 30% in user engagement.",
    image: naturalSafarisImage,
    link: "/"
  },
  {
    title: "Audistar Website Redesign",
    description: "Led the redesign of the website of Audistar, a Marketing solutions & media auditing company.",
    image: audistarImage,
    link: "/"
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-screen-2xl mx-auto px-6 md:px-8 pt-4 pb-10">
  {projects.map(project => (
    <div>
      <a 
        href={project.link}
        class="block group"
      >
        <div class="overflow-hidden rounded-2xl lg:rounded-3xl">
          <div class="relative">
            <Image
              src={project.image}
              alt={project.title}
              class="object-cover w-full transition-transform duration-300 group-hover:scale-105"
            />
          </div>
        </div>
      </a>
      <h3 class="mt-4 text-2xl font-semibold">
        {project.title}
      </h3>
      <p class="text-md lg:text-lg font-regular my-2 leading-normal">
        {project.description}
      </p>
    </div>
  ))}
</div>
