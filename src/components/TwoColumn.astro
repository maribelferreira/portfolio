---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  leftImage: ImageMetadata;
  rightImage: ImageMetadata;
  leftAlt?: string;
  rightAlt?: string;
  leftCaption?: string;
  rightCaption?: string;
  title?: string;
  description?: string | string[];
  variant?: '2x1' | '2x2';
  noPadding?: boolean;
}

const { 
  leftImage, 
  rightImage, 
  leftAlt = '', 
  rightAlt = '', 
  leftCaption,
  rightCaption,
  title, 
  description,
  variant = '2x2',
  noPadding = false
} = Astro.props;
---
<div class={`max-w-screen-2xl mx-auto sm:px-6 px-6 lg:px-8 text-left${noPadding ? '' : 'pt-12'} ${(title || description) ? 'mb-8' : ''}`}>
    {title && <h2 class="text-xl md:text-4xl font-semibold mb-4">{title}</h2>}
    {description && (
        Array.isArray(description) ? (
            description.map(paragraph => (
                <div class="text-md md:text-lg mb-4" set:html={paragraph} />
            ))
        ) : (
            <div class="text-md md:text-lg mb-4" set:html={description} />
        )
    )}
</div>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-screen-2xl mx-auto px-6 md:px-8 mb-20">
  <div>
    <Image 
      src={leftImage} 
      alt={leftAlt}
      class="w-full"
    />
    {leftCaption && <p class="text-sm text-center mt-2 text-gray-600">{leftCaption}</p>}
  </div>
  <div>
    <Image 
      src={rightImage} 
      alt={rightAlt}
      class="w-full"
    />
    {rightCaption && <p class="text-sm text-center mt-2 text-gray-600">{rightCaption}</p>}
  </div>
  {variant === '2x2' && (
    <>
      <div>
        <Image 
          src={leftImage} 
          alt={leftAlt}
          class="w-full"
        />
        {leftCaption && <p class="text-sm text-center mt-2 text-gray-600">{leftCaption}</p>}
      </div>
      <div>
        <Image 
          src={rightImage} 
          alt={rightAlt}
          class="w-full"
        />
        {rightCaption && <p class="text-sm text-center mt-2 text-gray-600">{rightCaption}</p>}
      </div>
    </>
  )}
</div>