---
import logo from '../assets/logo.png';
---
<nav class="py-2">
  <div class="flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <img src={logo.src} alt="Logo" class="h-8 w-auto" />
    </div>

    <!-- Mobile menu button -->
    <label for="nav-toggle" class="cursor-pointer lg:hidden">
      <svg class="w-6 h-6" fill="black" stroke="black" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </label>
    <input type="checkbox" id="nav-toggle" class="hidden" />

    <!-- Nav items -->
    <div class="nav-items">
      <a href="#portfolio" class="nav-link">Portfolio</a>
      <a href="#about" class="nav-link">About</a>
      <button class="bg-teal-400 px-4 py-2 rounded-full hover:bg-teal-500 transition-colors">
        Download CV
      </button>
    </div>
  </div>
</nav>

<style>
.nav-items {
    @apply fixed lg:relative top-16 lg:top-0 left-0 lg:flex items-center gap-8 w-full lg:w-auto bg-gray-400 lg:bg-transparent p-4 lg:p-0 hidden transition-all;
  }
  
  .nav-link {
    @apply block lg:inline-block py-2 text-gray-700 hover:text-blue-600 transition-colors;
  }
  
  #nav-toggle:checked ~ .nav-items {
    @apply block;
  }
</style>
