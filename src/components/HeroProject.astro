---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  subtitle: string;
  imageSrc: string;
  imageAlt?: string;
}

const { title, subtitle, imageSrc, imageAlt = "Hero work image" } = Astro.props;
---

<section class="pt-16 pb-14">
    <div class="px-4 sm:px-6 lg:px-8">
        <div class="text-center space-y-6">
            <h1 class="px-6 text-6xl font-bold">
                {title}
            </h1>
            <p
                class="mb-4 text-2xl">
                {subtitle}
            </p>
        </div>
    </div>
        <div class="relative mx-auto mt-4 md:mt-12">
            <div class="max-w-screen-2xl mx-auto px-4 md:px-8 flex justify-center">
                <Image 
                    class="w-full" 
                    src={imageSrc}
                    alt={imageAlt}
                    width={800}
                    height={600}
                />
            </div>
        </div>
</section>