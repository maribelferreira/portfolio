---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  subtitle: string;
  imageSrc: ImageMetadata;
  imageAlt?: string;
}

const { title, subtitle, imageSrc, imageAlt = "Hero work image" } = Astro.props;
---
<section class="pt-8 md:pt-14 pb-8">
        <div class="text-center space-y-4 md:space-y-8 max-w-screen-2xl mx-auto px-4 md:px-6">
            <h1 class="px-4 md:px-6 text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold">
                {title}
            </h1>
            <p
                class="text-md sm:text-lg md:text-[1.375rem] max-w-screen-xl mx-auto">
                {subtitle}
            </p>
            <div class="flex justify-center">
                <Image 
                    class="w-full" 
                    src={imageSrc}
                    alt={imageAlt}
                />
            </div>
        </div>
</section>